<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow Darker Line -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBorderGreen" />
            <corners android:radius="25dp"/>
        </shape>
    </item>

    <!-- Main Color -->
    <item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle" android:dither="true" >
            <solid android:color="@color/colorTransLightGreen"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>

</layer-list>
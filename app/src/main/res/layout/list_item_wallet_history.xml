<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/label_date"
        fontPath="fonts/HelveticaLTStd-Light.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_pic"
        android:layout_alignParentLeft="true"
        android:text="22/08/2016"
        android:textColor="@color/colorDarkGrey"
        android:textSize="14sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/label_amount"
        fontPath="fonts/HelveticaLTStd-Light.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_pic"
        android:layout_alignParentRight="true"
        android:text="Rp 50.000"
        android:textColor="@color/colorDarkGrey"
        android:textSize="14sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/label_description"
        fontPath="fonts/HelveticaLTStd-Light.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label_date"
        android:layout_toLeftOf="@id/label_amount"
        android:layout_marginLeft="10dp"
        android:text="Order #010010"
        android:textColor="@color/colorCustomGreen"
        android:textSize="14sp"/>

</RelativeLayout>
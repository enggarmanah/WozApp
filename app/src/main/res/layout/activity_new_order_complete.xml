<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content1_order_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:paddingBottom="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/button_close"
            android:layout_width="33dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_cancel" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title_content1_order_complete"
            fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="THANK YOU FOR THE ORDER!"
            android:textColor="@color/colorDarkGrey"
            android:textSize="17sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_subtitle_content1_order_complete"
            fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_content1_order_complete"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="We'll be processing your order soon"
            android:textColor="@color/colorCustomGreen"
            android:textSize="12sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/panel_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ScrollView>

</LinearLayout>
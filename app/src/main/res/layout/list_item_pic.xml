<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/btn_white_selector"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_user"
        app:border_color="#bebebe"
        app:border_width="0.5dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/label_assigned_order_count"
        fontPath="fonts/HelveticaLTStd-Light.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:text="3"
        android:textColor="@color/colorCustomGreen"
        android:textSize="22sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/label_place_address"
        fontPath="fonts/HelveticaLTStd-Light.otf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image_pic"
        android:layout_toLeftOf="@id/label_assigned_order_count"
        android:layout_marginLeft="16dp"
        android:layout_centerInParent="true"
        android:gravity="left|center_vertical"
        android:text="Lula Kamal"
        android:textColor="@color/colorDarkGrey"
        android:textSize="22sp" />

</RelativeLayout>
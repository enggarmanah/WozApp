<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_list_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/label_description"
            fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:text="29 Oct 2016"
            android:textColor="@color/colorCustomGreen"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/label_remarks"
            fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:text=""
            android:textColor="@color/colorCustomGreen"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/label_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:gravity="right"
            fontPath="fonts/HelveticaLTStd-Bold.otf"
            android:textColor="@color/colorDarkLightGrey"
            android:text="Rp. 40.000"
            android:textSize="17sp" />

    </LinearLayout>
</RelativeLayout>
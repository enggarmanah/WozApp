<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:id="@+id/rl_content5_kg_service"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title_total_kg_service"
                fontPath="fonts/HelveticaLTStd-Light.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Total charge"
                android:textColor="@color/colorDarkGrey"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/label_service_charge"
                fontPath="fonts/HelveticaLTStd-Light.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Rp. 200.000"
                android:textColor="@color/colorCustomGreen"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_content1_kg_service"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_kg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    fontPath="fonts/HelveticaLTStd-Bold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/service_name_kg"
                    android:textColor="@color/colorDarkLightGrey"
                    android:textSize="15sp" />

                <android.support.v7.widget.AppCompatTextView
                    fontPath="fonts/HelveticaLTStd-Light.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/service_desc_kg"
                    android:textColor="@color/colorCustomLightGrey"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_content2_kg_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_content1_kg_service"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/button_minus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_minus_grey"
                android:background="@drawable/btn_round_selector"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/text_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:cursorVisible="false"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/label_weight"
                    fontPath="fonts/HelveticaLTStd-Light.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Kg"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="40sp"
                    android:background="@color/colorWhite"/>
            </FrameLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/button_plus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_plus"
                android:background="@drawable/btn_round_selector"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_content3_kg_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_content2_kg_service"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaLTStd-Light.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Laundry Weight"
                android:textColor="@color/colorCustomLightGrey"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_content4_kg_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_content5_kg_service"
            android:layout_below="@id/rl_content3_kg_service"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="74dp"
                android:layout_height="44dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_kg" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaLTStd-Light.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Not sure how many kg(s)"
                android:textColor="@color/colorCustomGreen"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaLTStd-Light.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/kg_service_info"
                android:textColor="@color/colorCustomLightGrey"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/button_save"
            fontPath="fonts/HelveticaLTStd-Light.otf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Save"
            android:textColor="@drawable/text_white_selector"
            android:textSize="19sp"
            android:background="@drawable/btn_green_selector"/>

    </RelativeLayout>

</RelativeLayout>